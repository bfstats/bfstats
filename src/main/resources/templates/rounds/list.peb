{% extends "layout" %}
{% block title %} Rounds List {% endblock %}

{% block content %}
{% if rounds is empty %}
There are no rounds.
{% else %}
  {% for entry in rounds %}
    <strong>{{ entry.key | dt("dd-MM-yyyy") }}</strong>
    <ul>
    {% for round in entry.value %}
    <li>
    {{ round.id }} <a href="/rounds/{{ round.id }}">{{ round.mapName }}</a>
    {{ round.startTime | dt("dd-MM-yyyy HH:mm") }} - {{ round.endTime | dt("dd-MM-yyyy HH:mm") }} ({{ round.durationInMinutes }} min)
    </li>
    {% endfor %}
    </ul>
  {% endfor %}
{% endif %}

{% endblock %}