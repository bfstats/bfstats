{% if weapons is not empty %}
<table class="styled_table half">
  <caption>Most used weapons</caption>
  <thead>
  <tr>
    <th><div><span class="label">#</span></div></th>
    <th><div><span class="label">Weapon</span></div></th>
    <th><div><span class="label">Used</span></div></th>
    <th><div><span class="label">%</span></div></th>
  </tr>
  </thead>
  <tbody>
  {% for weapon in weapons %}
  <tr>
    <td>{{ loop.index + 1 }}</td>
    <td class="left"><a href="/weapons/{{ weapon.code }}">{{ weapon.name }}</a></td>
    <td>{{ weapon.timesUsed }}</td>
    <td class="percent">{{ weapon.percentage | numberformat("0.0") }}
      <div class="meter">
        <span style="width: {{ weapon.percentage }}%"></span>
      </div>
    </td>
  </tr>
  {% endfor %}
  </tbody>
</table>
{% endif %}