
{% macro pagination(totalCount, countPerPage, page, currentPage, urlPrefix='?') %}
{% if totalCount > 0 %}
<div class="pagination">
  {% for page in range(1, totalCount / countPerPage + 1) %}
  {% if page == currentPage %}
  {{ page }}
  {% else %}
  <a href="{{urlPrefix}}page={{page}}">{{ page }}</a>
  {% endif %}
  {% endfor %}
</div>
{% endif %}
{% endmacro %}